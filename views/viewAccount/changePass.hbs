{{#section 'js'}}
<script>
    function validate() { //kiểm tra hợp lệ thông tin
        var OldPass = document.forms["form"]["oldPass"];
        var NewPass = document.forms["form"]["newPass"];
        var cfPassword = document.forms["form"]["confirmPass"];
        
        if( OldPass.value == "" || NewPass.value == "" || cfPassword.value == "")
        {
            alert("Vui lòng nhập đầy đủ thông tin");
            return false;
        }

        if(cfPassword.value != NewPass.value)
        {
            NewPass.style.borderColor = "lightgrey";
            cfPassword.style.borderColor = "red";
            return false;
        }

        return true;
    }
</script>
{{/section}}

<div class="container m-4">
    <form method="POST" novalidate id="form" name="form" onsubmit="return validate()">
        <h4>Thay đổi mật khẩu: </h4>
        {{#if err_message}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
                    {{err_message}}
        </div>
        {{/if}}
        <div class="form-group">
            <label for="txtFullDes">Mật khẩu cũ:</label>
            <input class="form-control" id="oldPass" name="oldPass" type="password" placeholder="***">
        </div>
        <div class="form-group">
            <label for="txtFullDes">Mật khẩu mới:</label>
            <input class="form-control" id="newPass" name="newPass" type="password"  placeholder="***">
        </div>
        <div class="form-group">
            <label for="txtFullDes">Xác nhận mật khẩu mới:</label>
            <input class="form-control" id="confirmPass" name="confirmPass" type="password"  placeholder="***">
        </div>
     
        <div class="row">
            <button type="submit" class="btn btn-lg btn-success btn-block">
                <i class="fa fa-check" aria-hidden="true"></i>
                    Xác nhận
            </button>
            <button type="reset" class="btn btn-lg btn-danger btn-block">
                <i class="fa fa-check" aria-hidden="true"></i>
                    Hủy
            </button>
        </div>
    </form>
</div>