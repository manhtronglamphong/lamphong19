<div class="card shadow mb-4">
  <div class="card-body">
    {{#if err_message}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          {{err_message}}
        </div>
    {{/if}}
    <form method="POST" id="form">
            <div class="m-2">
                    <div class="form-group">
                    <label for="txtUsername">Username</label>
                    <input type="text" class="form-control" id="txtUsername" name="user" autofocus>
                    </div>
                    <div class="form-group">
                    <label for="txtPassword">Mật khẩu</label>
                    <input type="password" class="form-control" id="txtPassword" name="raw_password">
                    </div>
            </div>
            <button type="submit" class="btn btn-outline-success" formaction="/account/login">
                <i class="fa fa-check" aria-hidden="true"></i>
                Đăng nhập
            </button>
    </form>
  </div>
</div>