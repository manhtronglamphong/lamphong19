                                <button type="submit" class="btn btn-outline-danger" formaction="/favourite/del/{{id}}">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                      Bỏ yêu thích
                                </button>
                            </div>
                        </div>
                      </div>  
                      {{/each}}
