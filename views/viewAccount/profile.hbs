            <div class="tab-pane fade show active" id="list-1" role="tabpanel" aria-labelledby="list-home-list">
                <div class="row no-gutters">
                    <div class="col-md-8">
                      <form method="POST">
                        <div class="card-body ml-5">
                            
                                    <h3 class="card-title">Thông tin tài khoản</h3>                    
                                    <p>Họ tên: {{ten}}</p>
                                    <p>Email: {{email}}</p>
                                    <p id="point">Điểm đánh giá: {{diem_danh_gia}}</p>
                                    {{#if quyen_han}} 
                                    <p>Loại tài khoản: Seller</p>
                                    <a class="btn btn-outline-success m-1" href="/upload" role="button">Đăng sản phẩm</a>
                                    {{else}}
                                    <p>Loại tài khoản: Bidder</p>
                                    <button type="submit" formaction="/account/profile/upgrade/{{id}}" class="btn btn-outline-success">Upgrage thành seller</button>
                                    {{/if}}
                                    <a class="btn btn-outline-primary m-1" href="/account/profile/change/{{id}}" role="button">Đổi thông tin</a>
                                    <a class="btn btn-outline-primary m-1" href="/account/profile/changepass/{{id}}" role="button">Đổi mật khẩu</a>
                           
                        </div>
                        </form>
                    </div>
                </div>
            </div>
 {{/each}}
