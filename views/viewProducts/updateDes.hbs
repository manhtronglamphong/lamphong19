{{#section 'css'}}
    <link rel = "stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        
    <script>
        tinymce.init(
            {selector:'#txtFullDes',
            height: 600,
            width: 1000,
            plugins: 'paste image link autolink lists table media',
            menubar: false,
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
                'forecolor backcolor',
                'table link image media',
            ],});

    </script>

{{/section}}

<form method="POST"  novalidateid="from" name="form" >
    <div class="m-5 row justify-content-center">
        <div class="card shadow">
            <h4 class="card-header">
                Update description
            </h4>
            <div class="card-body">
                            <div class="form-group">
                                <label for="txtFullDes">Bổ sung mô tả:</label>
                                <textarea class="form-control" id="txtFullDes" name="FullDes"></textarea>
                            </div>
            </div>

            <div class="card-footer text-right">
                        <button type="submit" class="btn btn-lg btn-success btn-block">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Xác nhận
                        </button>
                        <button type="reset" class="btn btn-lg btn-danger btn-block">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Hủy
                        </button>
            </div>
        </div>
    </div>      
</form>